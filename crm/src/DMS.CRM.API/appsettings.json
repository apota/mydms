{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "CrmDatabase": "Host=localhost;Database=dms_crm;Username=postgres;Password=postgres"
  },
  "AWS": {
    "Region": "us-east-1",
    "UseLocalStack": false
  },
  "DynamoDb": {
    "CustomerInteractionsTable": "dms-customer-interactions",
    "LocalEndpoint": "http://localhost:8000"
  },
  "Auth": {
    "Authority": "https://your-auth-server/",
    "Audience": "dms-api",
    "UseDevSettings": true,
    "SigningKey": "super-secret-key-for-development-only",
    "ValidIssuer": "https://your-auth-server/"
  },
  "AllowedHosts": "*"
}
